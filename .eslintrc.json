{
  "env": {
    "node": true,
    "es6": true,
    "jasmine": true
  },
  "extends": [
    "airbnb-base"
  ],
  "ignorePatterns": [
    "loader.js",
    "node_modules/",
    "html-doc/",
    "doc/"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "no-multi-assign": "off"
  }
}
